<!-- script for removing the products  -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const removeFromWishlistButtons = document.querySelectorAll(".btn-remove");

        removeFromWishlistButtons.forEach(button => {
            button.addEventListener("click", function (event) {
                event.preventDefault();

                const productId = this.getAttribute("data-product-id");

                // Show confirmation dialog
                showConfirmationDialog(productId);
            });
        });

        function showConfirmationDialog(productId) {
            Swal.fire({
                title: "Remove Product",
                text: "Are you sure you want to remove this product from the wishlist?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Confirm",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, trigger the removal of the product
                    removeFromWishlist(productId);
                }
            });
        }

        async function removeFromWishlist(productId) {
            try {
                const response = await fetch(`/wishlist/delete/${productId}`, {
                    method: "DELETE",
                    headers: {
                        "Content-Type": "application/json",
                    },
                });

                const data = await response.json();

                if (response.ok) {
                    // Product removed successfully
                    showAlert("success", "Product removed from wishlist successfully");
                } else {
                    // Error removing the product
                    showAlert("error", data.message || "Error removing product from wishlist");
                }
            } catch (error) {
                console.error("Fetch Error:", error);
            }
        }

        function showAlert(icon, text) {
            Swal.fire({
                icon: icon,
                title: text,
                showConfirmButton: false,
                timer: 1500, // Adjust the time the alert is displayed
            });
			setTimeout(()=>{
			window.location.reload()
		},1000)
        }
		
    });
</script>



