<%-include('../layouts/header.ejs')%>
<%-include('../layouts/navbar.ejs')%>
<%-include('../layouts/mobileNav.ejs') %>
<main class="main">
    <div class="forgetpassword-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
        style="background-image: url('user/assets/images/backgrounds/login-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="forgetpassword-tab" data-toggle="tab" href="#forgetpassword"
                                role="tab" aria-controls="forgetpassword" aria-selected="true">Forgot Password</a>
                        </li>
                    </ul>
                    <br>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="forgetpassword" role="tabpanel"
                            aria-labelledby="forgetpassword-tab">
                            <form action="/forgetpassword" method="POST" id="forgetpassword-form">
                                <div class="form-group">
                                    <label for="forgetpassword-email">Email Address *</label>
                                    <input type="email" class="form-control" id="forgetpassword-email" name="email" required>
                                </div><!-- End .form-group -->
                                <br>
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>SEND OTP</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                </div><!-- End .form-footer -->
                                <a href="/login">Back to Login</a>
                            </form>
                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .forgetpassword-page section-bg -->
</main><!-- End .main -->

<%-include('../layouts/footerNav.ejs')%>
