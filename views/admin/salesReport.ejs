<!-- script for downloading the sales report -->
<script>
  function downloadSalesReport() {
      var table = document.getElementById('salesTableBody');
      var rows = table.getElementsByTagName('tr');
      var data = [];
      for (var i = 0; i < rows.length; i++) {
          var cells = rows[i].getElementsByTagName('td');
          if (cells.length > 0) {
              var rowData = {
                  userName: cells[0].innerText,
                  date: cells[1].innerText,
                  address: cells[2].innerText,
                  total: cells[3].innerText,
                  paymentMethod: cells[4].innerText,
                  status: cells[5].innerText
              };
              data.push(rowData);
          }
      }
  
      console.log("Data to be sent:", data); // Debugging line
  
      fetch('/admin/salesreport/download', {
          method: 'POST',
          headers: {
              'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
      })
      .then(response => response.blob())
      .then(blob => {
          var url = window.URL.createObjectURL(blob);
          var a = document.createElement('a');
          a.href = url;
          a.download = 'sales_report.xlsx';
          document.body.appendChild(a);
          a.click();
          a.remove();
      })
      .catch(error => console.error('Error downloading sales report:', error));
  }
  </script>


